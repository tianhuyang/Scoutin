<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
                               "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<data-sources />
	<form-beans>
	    <form-bean name="indexForm" type="com.scoutin.forms.IndexActionForm"></form-bean>
	</form-beans>
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action path="/index" type="com.scoutin.Signin" name="indexForm" input="/index.htm">
			<forward name="success" path="/index.jsp"></forward>
		</action>
	</action-mappings>
	<controller />
	<message-resources parameter="com.scoutin.resources.message" />
</struts-config>