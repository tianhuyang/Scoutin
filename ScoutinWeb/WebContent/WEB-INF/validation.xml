<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_l_l_3.dtd">
<form-validation>
	<formset>
		<form name="SignUpActionForm">
			<field property="email" depends="required,email">
				<arg key="error.signup.email" />
			</field>
			<field property="password" depends="required,minlength">
				<arg key="error.signup.password" />
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>
			<field property="repassword" depends="required,validwhen">
				<arg key="error.signup.password.mismatch" />
				<var>
					<var-name>test</var-name>
					<var-value>((*this*==null)or(*this*==password))</var-value>
				</var>
			</field>
		</form>

		<form name="SignInActionForm">
			<field property="email" depends="required,email">
				<arg key="error.signup.email" />
			</field>
		</form>
	</formset>
</form-validation>